<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="12dp">

    <!-- 主评论 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 用户头像 -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivUserAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 用户名和时间 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="科技爱好者" />

                <TextView
                    android:id="@+id/tvCommentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    tools:text="2天前" />
            </LinearLayout>

            <!-- 评论内容 -->
            <TextView
                android:id="@+id/tvCommentContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                tools:text="这篇文章写得非常好，我已经开始尝试定制我的AI角色了！" />

            <!-- 操作按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    app:drawableStartCompat="@drawable/ic_heart"
                    app:drawableTint="@color/text_secondary"
                    tools:text="24" />

                <TextView
                    android:id="@+id/btnReply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:text="@string/article_reply"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    app:drawableStartCompat="@drawable/ic_comment"
                    app:drawableTint="@color/text_secondary" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 回复列表 -->
    <LinearLayout
        android:id="@+id/layoutReplies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:orientation="vertical">
        <!-- 回复项将在代码中动态添加 -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">
        <!-- 展开回复按钮 -->
        <TextView
            android:id="@+id/btnExpandReplies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="15dp"
            android:text="展开100+条回复 v"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:visibility="visible" />

        <!-- 展开更多按钮 -->
        <TextView
            android:id="@+id/btnLoadMoreReplies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="15dp"
            android:text="展开更多 v"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:visibility="gone" />

        <!-- 收起按钮 -->
        <TextView
            android:id="@+id/btnCollapseReplies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="15dp"
            android:text="收起 ^"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout> 