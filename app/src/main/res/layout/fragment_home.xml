<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".fragment.HomeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        app:elevation="0dp">

        <!-- 搜索栏 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/searchBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="100dp"
                app:cardElevation="@dimen/shadow_small"
                android:layout_margin="16dp"
                android:outlineAmbientShadowColor="@color/shadow"
                android:outlineSpotShadowColor="@color/shadow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/search"
                        android:src="@drawable/ic_search"
                        app:tint="@color/text_hint" />

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:hint="@string/search_hint"
                        android:background="@null"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 分类标签 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:scrollbars="none"
            android:background="@color/background">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/categoryChipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true"
                android:layout_gravity="start"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAll"
                    style="@style/widget_home_chip_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="全部" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipEmotional"
                    style="@style/widget_home_chip_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="情感陪伴" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipStudy"
                    style="@style/widget_home_chip_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学习助手" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCreative"
                    style="@style/widget_home_chip_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创意伙伴" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipLife"
                    style="@style/widget_home_chip_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生活顾问" />
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 热门AI角色 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:drawablePadding="8dp"
                    android:text="@string/recommended_characters"
                    android:textColor="@color/accent"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableTint="@color/accent"
                    app:drawableStartCompat="@drawable/ic_star" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvCharacters"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="5"
                        tools:listitem="@layout/item_character" />
                </FrameLayout>

                <!-- 精选内容 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="8dp"
                    android:text="@string/featured_content"
                    android:textColor="@color/accent"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableTint="@color/accent"
                    app:drawableStartCompat="@drawable/ic_crown" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/featuredCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="@dimen/shadow_small"
                    android:outlineAmbientShadowColor="@color/shadow"
                    android:outlineSpotShadowColor="@color/shadow">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivFeatured"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:contentDescription="@string/topic_image"
                            android:scaleType="centerCrop"
                            tools:src="@tools:sample/backgrounds/scenic" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tvFeaturedTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/accent"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                tools:text="@string/topic_title_example" />

                            <TextView
                                android:id="@+id/tvFeaturedDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                tools:text="@string/topic_description_example" />

                            <com.google.android.material.chip.ChipGroup
                                android:id="@+id/tagChipGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp">

                                <com.google.android.material.chip.Chip
                                    style="@style/widget_home_chip_action"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="#情感连接" />

                                <com.google.android.material.chip.Chip
                                    style="@style/widget_home_chip_action"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="#AI互动" />

                                <com.google.android.material.chip.Chip
                                    style="@style/widget_home_chip_action"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="#数字伙伴" />
                            </com.google.android.material.chip.ChipGroup>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- 热门话题 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="8dp"
                    android:text="@string/hot_topics"
                    android:textColor="@color/accent"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableTint="@color/accent"
                    app:drawableStartCompat="@drawable/ic_fire" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTopics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="5"
                    tools:listitem="@layout/item_topic" />

                <Space
                    android:id="@+id/empty_space"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 