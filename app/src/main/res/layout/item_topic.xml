<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="@dimen/shadow_small"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="16dp"
    android:outlineAmbientShadowColor="@color/shadow"
    android:outlineSpotShadowColor="@color/shadow"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvRank"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            tools:text="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="AI角色定制：打造专属于你的数字伴侣" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvViews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    app:drawableStartCompat="@drawable/ic_eye"
                    app:drawableTint="@color/text_secondary"
                    tools:text="2.3万" />

                <TextView
                    android:id="@+id/tvComments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    app:drawableTint="@color/text_secondary"
                    app:drawableStartCompat="@drawable/ic_comment"
                    tools:text="342" />

                <TextView
                    android:id="@+id/tvLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    app:drawableTint="@color/text_secondary"
                    app:drawableStartCompat="@drawable/ic_heart"
                    tools:text="1.5万" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView> 