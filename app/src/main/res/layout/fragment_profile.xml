<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".fragment.ProfileFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- 个人资料头部 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="@dimen/shadow_small"
                    android:background="@color/background"
                    android:outlineAmbientShadowColor="@color/shadow"
                    android:outlineSpotShadowColor="@color/shadow">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_profile_header"
                        android:paddingVertical="16dp">

                        <!-- 设置按钮 -->

                        <!-- 头像容器 -->
                        <ImageButton
                            android:id="@+id/buttonSettings"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/bg_profile_settings"
                            android:contentDescription="@string/profile_settings"
                            android:src="@drawable/ic_settings"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/icon_profile_settings" />

                        <FrameLayout
                            android:id="@+id/avatarContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/imageAvatar"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/CircleImageView"
                                android:src="@drawable/logo"
                                android:background="@color/white"
                                android:padding="4dp" />

                            <ImageButton
                                android:id="@+id/buttonEditAvatar"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="bottom|end"
                                android:background="@drawable/circle_primary"
                                android:contentDescription="@string/profile_edit_avatar"
                                android:src="@drawable/ic_camera"
                                app:tint="@color/text_profile_primary" />
                        </FrameLayout>

                        <!-- 用户名 -->
                        <TextView
                            android:id="@+id/textUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:textColor="@color/text_primary"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@id/avatarContainer"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:text="张三" />

                        <!-- 用户ID -->
                        <TextView
                            android:id="@+id/textUserId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            app:layout_constraintTop_toBottomOf="@id/textUsername"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:text="ID: 123456" />

                        <!-- 个人简介 -->
                        <TextView
                            android:id="@+id/textDescription"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            app:layout_constraintTop_toBottomOf="@id/textUserId"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintWidth_max="300dp"
                            tools:text="这是用户的个人简介，可以包含多行文字。这是用户的个人简介，可以包含多行文字。" />

                        <!-- 统计信息 -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardStats"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="@dimen/shadow_small"
                            app:cardBackgroundColor="@color/card_background"
                            android:layout_marginHorizontal="16dp"
                            app:layout_constraintTop_toBottomOf="@id/textDescription"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:outlineAmbientShadowColor="@color/shadow"
                            android:outlineSpotShadowColor="@color/shadow">

                            <LinearLayout
                                android:id="@+id/info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:baselineAligned="false"
                                android:orientation="horizontal"
                                android:padding="15dp">

                                <!-- 关注 -->
                                <LinearLayout
                                    android:id="@+id/layoutFollowing"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:backgroundTint="@color/card_background"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textFollowingCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/accent"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        tools:text="120" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:text="@string/profile_following"
                                        android:textColor="@color/text_profile_secondary"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <!-- 粉丝 -->
                                <LinearLayout
                                    android:id="@+id/layoutFollowers"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:backgroundTint="@color/card_background"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textFollowersCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/accent"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        tools:text="85" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:text="@string/profile_followers"
                                        android:textColor="@color/text_profile_secondary"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <!-- 帖子 -->
                                <LinearLayout
                                    android:id="@+id/layoutPosts"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:backgroundTint="@color/card_background"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textPostsCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/accent"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        tools:text="42" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:text="@string/profile_posts"
                                        android:textColor="@color/text_profile_secondary"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- 操作按钮 -->
                        <LinearLayout
                            style="?android:attr/buttonBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            app:layout_constraintTop_toBottomOf="@id/cardStats"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/buttonEditProfile"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:layout_margin="@dimen/spacing_large"
                                android:background="@drawable/button_primary_rounded"
                                android:text="@string/profile_edit"
                                android:textColor="@color/text_profile_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:elevation="@dimen/shadow_small"
                                android:outlineAmbientShadowColor="@color/shadow"
                                android:outlineSpotShadowColor="@color/shadow"
                                android:layout_marginStart="5dp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/buttonShare"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:layout_margin="@dimen/spacing_large"
                                android:background="@drawable/button_secondary_rounded"
                                android:text="@string/share"
                                android:textColor="@color/accent"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:outlineAmbientShadowColor="@color/shadow"
                                android:outlineSpotShadowColor="@color/shadow"
                                android:layout_marginEnd="5dp" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/background"
                    app:cardElevation="0dp"
                    android:outlineAmbientShadowColor="@color/shadow"
                    android:outlineSpotShadowColor="@color/shadow">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!-- 标签页 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/background">

                            <TextView
                                android:id="@+id/tabPosts"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="15dp"
                                android:text="@string/profile_posts"
                                android:background="@color/surface"
                                android:textColor="@color/accent"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/divider" />

                            <TextView
                                android:id="@+id/tabCharacters"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="15dp"
                                android:text="@string/profile_my_characters"
                                android:background="@color/surface"
                                android:textColor="@color/text_secondary"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <!-- 标签指示器 -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="@color/background">

                            <View
                                android:id="@+id/tabIndicator"
                                android:layout_width="0dp"
                                android:layout_height="3dp"
                                android:layout_gravity="start"
                                android:background="@color/primary" />
                        </FrameLayout>

                        <!-- 内容区域 -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- 帖子列表 -->
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerPosts"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                android:visibility="gone"
                                tools:listitem="@layout/item_post" />

                            <!-- 角色列表 -->
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerCharacters"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                android:visibility="gone"
                                tools:listitem="@layout/item_character_small" />

                            <!-- 功能菜单 -->
                            <LinearLayout
                                android:id="@+id/layoutMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <!-- 功能菜单卡片 -->
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="16dp"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="@dimen/shadow_small"
                                    android:outlineAmbientShadowColor="@color/shadow"
                                    android:outlineSpotShadowColor="@color/shadow">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <!-- 收藏 -->
                                        <LinearLayout
                                            android:id="@+id/cardFavorites"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="?attr/selectableItemBackground"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal"
                                            android:padding="16dp">

                                            <FrameLayout
                                                android:layout_width="36dp"
                                                android:layout_height="36dp"
                                                android:layout_marginEnd="15dp"
                                                android:background="@drawable/bg_icon_container">

                                                <ImageView
                                                    android:layout_width="24dp"
                                                    android:layout_height="24dp"
                                                    android:layout_gravity="center"
                                                    android:contentDescription="@string/profile_favorites"
                                                    android:src="@drawable/ic_favorite"
                                                    app:tint="@color/primary" />
                                            </FrameLayout>

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="@string/profile_favorites"
                                                android:textColor="@color/text_primary"
                                                android:textSize="15sp" />

                                            <ImageView
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:contentDescription="@string/arrow_right"
                                                android:src="@drawable/ic_arrow_right"
                                                app:tint="@color/text_hint" />
                                        </LinearLayout>

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:background="@color/divider" />

                                        <!-- 历史记录 -->
                                        <LinearLayout
                                            android:id="@+id/cardHistory"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="?attr/selectableItemBackground"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal"
                                            android:padding="16dp">

                                            <FrameLayout
                                                android:layout_width="36dp"
                                                android:layout_height="36dp"
                                                android:layout_marginEnd="15dp"
                                                android:background="@drawable/bg_icon_container">

                                                <ImageView
                                                    android:layout_width="24dp"
                                                    android:layout_height="24dp"
                                                    android:layout_gravity="center"
                                                    android:contentDescription="@string/profile_history"
                                                    android:src="@drawable/ic_history"
                                                    app:tint="@color/primary" />
                                            </FrameLayout>

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="@string/profile_history"
                                                android:textColor="@color/text_primary"
                                                android:textSize="15sp" />

                                            <ImageView
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:contentDescription="@string/arrow_right"
                                                android:src="@drawable/ic_arrow_right"
                                                app:tint="@color/text_hint" />
                                        </LinearLayout>

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:background="@color/divider" />

                                        <!-- 钱包 -->
                                        <LinearLayout
                                            android:id="@+id/cardWallet"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="?attr/selectableItemBackground"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal"
                                            android:padding="16dp">

                                            <FrameLayout
                                                android:layout_width="36dp"
                                                android:layout_height="36dp"
                                                android:layout_marginEnd="15dp"
                                                android:background="@drawable/bg_icon_container">

                                                <ImageView
                                                    android:layout_width="24dp"
                                                    android:layout_height="24dp"
                                                    android:layout_gravity="center"
                                                    android:contentDescription="@string/profile_wallet"
                                                    android:src="@drawable/ic_wallet"
                                                    app:tint="@color/primary" />
                                            </FrameLayout>

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="@string/profile_wallet"
                                                android:textColor="@color/text_primary"
                                                android:textSize="15sp" />

                                            <ImageView
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:contentDescription="@string/arrow_right"
                                                android:src="@drawable/ic_arrow_right"
                                                app:tint="@color/text_hint" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <!-- 其他设置卡片 -->
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="@dimen/shadow_small"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginHorizontal="16dp"
                                    android:layout_marginBottom="16dp"
                                    android:outlineAmbientShadowColor="@color/shadow"
                                    android:outlineSpotShadowColor="@color/shadow">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <!-- 帮助与反馈 -->
                                        <LinearLayout
                                            android:id="@+id/cardHelp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="?attr/selectableItemBackground"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal"
                                            android:padding="16dp">

                                            <FrameLayout
                                                android:layout_width="36dp"
                                                android:layout_height="36dp"
                                                android:layout_marginEnd="15dp"
                                                android:background="@drawable/bg_icon_container">

                                                <ImageView
                                                    android:layout_width="24dp"
                                                    android:layout_height="24dp"
                                                    android:layout_gravity="center"
                                                    android:contentDescription="@string/profile_help"
                                                    android:src="@drawable/ic_help"
                                                    app:tint="@color/primary" />
                                            </FrameLayout>

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="@string/profile_help"
                                                android:textColor="@color/text_primary"
                                                android:textSize="15sp" />

                                            <ImageView
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:contentDescription="@string/arrow_right"
                                                android:src="@drawable/ic_arrow_right"
                                                app:tint="@color/text_hint" />
                                        </LinearLayout>

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:background="@color/divider" />

                                        <!-- 关于我们 -->
                                        <LinearLayout
                                            android:id="@+id/cardAbout"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="?attr/selectableItemBackground"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal"
                                            android:padding="16dp">

                                            <FrameLayout
                                                android:layout_width="36dp"
                                                android:layout_height="36dp"
                                                android:layout_marginEnd="15dp"
                                                android:background="@drawable/bg_icon_container">

                                                <ImageView
                                                    android:layout_width="24dp"
                                                    android:layout_height="24dp"
                                                    android:layout_gravity="center"
                                                    android:contentDescription="@string/profile_about"
                                                    android:src="@drawable/ic_about"
                                                    app:tint="@color/primary" />
                                            </FrameLayout>

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="@string/profile_about"
                                                android:textColor="@color/text_primary"
                                                android:textSize="15sp" />

                                            <ImageView
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:contentDescription="@string/arrow_right"
                                                android:src="@drawable/ic_arrow_right"
                                                app:tint="@color/text_hint" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Space
                    android:id="@+id/empty_space"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- 加载进度条 -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>